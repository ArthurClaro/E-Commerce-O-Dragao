function headerFilter(arr) {
    let lista = []
    for (let i = 0; i < arr.length; i++) {
        if (arr[i].tag == `Kimono`) {
            
            // console.log(arr[i].tag[0])
            // console.log(arr[i].tag)


            lista.push(arr[i])
            ul.innerHTML = ""

        }
    }

    renderProducts(lista)
}

// headerFilter(produtos, "Kimono")


function headerFilter2(arr) {
    let lista = []
    for (let i = 0; i < arr.length; i++) {
        if (arr[i].tag != `Kimono`) {
            lista.push(arr[i])
            ul.innerHTML = ""

        }
    }

    renderProducts(lista)
}
